	<div class="control-group">
		<%=f.label :subject, :class => "control-label"%>
		<div class="controls">
			<%=f.text_field :subject%>
		</div>
	</div>
	<div class="control-group">
		<%=f.label :content, "Question", :class => "control-label"%>
		<div class="controls">
			<%=f.text_area :content, :class=>"question-field"%>
		    <span class="help-block">Markdown format Supported.</span>
		</div>
	</div>
	<div class="control-group">
		<%=f.label :tag_string, "Tags", :class => "control-label"%>
		<div class="controls">
			<%=f.text_field :tag_string%>
		    <span class="help-block">A comma delimited list of tags for this question.</span>
		</div>
	</div>
